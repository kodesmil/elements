{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "paths": {
      "@kodesmil/elements/*": ["./src/*"]
    }
  },
  "include": [
    "src/*.ts",
    "src/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "dist/types/**/*.ts",
    "tsup.config.ts"
  ],
  "exclude": ["node_modules"]
}
